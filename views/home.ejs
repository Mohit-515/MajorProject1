<h1>Codeial / <%= title%></h1>
<section id="feed-posts">
    <h4>Posts</h4>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" id="post" cols="30" rows="10" placeholder="Type here...."></textarea>
        <input type="submit" value="Post">
    </form>
    <div id="posts-list-container">
        <ul>
            <% for(post of posts){%>
            <li>
                <p>
                    <%= post.content %>
                    <br>
                    <small>
                        <%= post.user.name %>
                            <!-- for displaying user id -->
                            <!-- <%= post.user %> -->
                    </small>
                </p>
            </li>
            <%}%>
        </ul>

    </div>
</section>